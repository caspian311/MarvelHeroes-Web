.column1.sign_up
  .box
    %h4 Log In

    %p.error
      = flash[:error]

    = form_for :session, url: { action: :create } do |f|
      = f.text_field :email, placeholder: 'Email'
      = f.text_field :password, placeholder: 'Password'
      = f.submit 'Sign Up'

  = link_to 'New User?', new_user_path

= javascript_include_tag 'users/app'
